<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/hold_steady_component_size"
    android:layout_height="@dimen/hold_steady_component_size" >

    <com.google.atap.tango.ux.HoldSteadyFrameView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/bubble_level_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transformPivotX="@dimen/hold_steady_frame_transform_pivot_x"
        android:transformPivotY="@dimen/hold_steady_frame_transform_pivot_y" >

        <ImageView
            android:id="@+id/bubble_level_err"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/hold_steady_bubble_level_err" />

        <ImageView
            android:id="@+id/bubble_level_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/hold_steady_bubble_level_ok" />
    </FrameLayout>

</FrameLayout>
